<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_test_a_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        app:backButton="true"
        app:barStyle="light"
        app:layout_collapseMode="pin"
        app:title="路径加载动画" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.chenyang.androidproject.view.customview.GetSegmentView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_300"
                android:layout_margin="@dimen/dp_10" />

            <com.chenyang.androidproject.view.customview.GetSegmentOneView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_300"
                android:layout_margin="@dimen/dp_10" />

            <com.chenyang.androidproject.view.customview.GetPosTanView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_300"
                android:layout_margin="@dimen/dp_10" />
            <com.chenyang.androidproject.view.customview.AliPayView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_300"
                android:layout_margin="@dimen/dp_10" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>

</android.support.v7.widget.LinearLayoutCompat>