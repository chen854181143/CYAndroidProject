<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/moduleface_iv_circle"
        android:layout_width="@dimen/dp_600"
        android:layout_height="@dimen/dp_600"
        android:layout_centerInParent="true"
        android:src="@drawable/moudleface_bg_circle"
        android:visibility="gone"/>

    <com.chenyang.androidproject.utils.capture.CircleCameraLayout
        android:id="@+id/moduleface_circlecamera_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clipChildren="true"
        app:border_width="5dp"
        app:circle_camera_width="@dimen/dp_580" />

    <TextView
        android:id="@+id/moduleface_tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/moduleface_iv_circle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_110"
        android:gravity="center_horizontal"
        android:textColor="#1C87CC"
        android:textSize="@dimen/dp_56"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/moduleface_tv_remake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/moduleface_iv_circle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_47"
        android:text="重拍"
        android:textColor="#FB4343"
        android:textSize="@dimen/sp_40"
        android:visibility="gone" />

    <TextView
        android:id="@+id/moduleface_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moduleface_iv_circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_65"
        android:textColor="#49A1DA"
        android:textSize="@dimen/dp_50"
        android:visibility="gone" />

    <TextView
        android:id="@+id/moduleface_tv_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moduleface_tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_18"
        android:textColor="#49A1DA"
        android:textSize="@dimen/sp_36"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/moduleface_ll_commitorcancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_193"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/moduleface_tv_cancel"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_144"
            android:background="@color/black"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_40"
            android:visibility="gone" />

        <TextView
            android:id="@+id/moduleface_tv_commit"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_144"
            android:layout_marginLeft="@dimen/dp_46"
            android:background="@color/black"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_40"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/moduleface_tv_back"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_144"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_193"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_4"
        android:visibility="gone" />
</RelativeLayout>